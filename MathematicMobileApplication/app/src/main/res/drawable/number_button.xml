<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state - lighter purple -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#D1C4E9" />
            <stroke android:width="1dp" android:color="#B39DDB" />
        </shape>
    </item>
    <!-- Pressed state - deeper purple with slight glow effect -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#673AB7" />
            <stroke android:width="2dp" android:color="#512DA8" />
        </shape>
    </item>
    <!-- Default state - vibrant but complementary purple -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#7E57C2" />
            <stroke android:width="1dp" android:color="#5E35B1" />
            <!-- Optional subtle gradient effect -->
            <gradient
                android:startColor="#9575CD"
                android:endColor="#7E57C2"
                android:angle="135" />
        </shape>
    </item>
</selector>